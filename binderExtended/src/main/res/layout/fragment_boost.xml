<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.qboxus.binder_pro.ActivitiesFragments.Boost_F"
    android:clickable="true"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.9"
            android:id="@+id/transparent_layout"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            android:clickable="true"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/d_boost_gradient">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_margin="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:text="@string/introducting_binder_boost" />

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_boost" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/skip_the_line"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="@string/be_the_top_profile_in_your_area_for_30_minutes_and_get_more_watchs"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:weightSum="3"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="1"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/boost"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/blue"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="15dp"
                                android:text="$6.99/ea"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/blue"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:text="@string/save_14"
                            android:textColor="@color/white" />

                        <RelativeLayout
                            android:layout_below="@+id/tv1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@color/white"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="5"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/boost"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/blue"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="15dp"
                                    android:text="$5.99/ea"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/blue"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:text="@string/save_34"
                            android:textColor="@color/white"
                            />

                        <RelativeLayout
                            android:layout_below="@+id/tv2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@color/white"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="10"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/boost"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/blue"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="15dp"
                                    android:text="$4.99/ea"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/blue"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/boost_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:background="@drawable/ic_pink_background"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp">

                            <TextView
                                android:id="@+id/continue_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/boost_me"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/seperaterView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:background="@color/newLightGray"
                                android:layout_toStartOf="@+id/orTv"
                                android:layout_toLeftOf="@+id/orTv"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/orTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text="@string/or"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/newLightGray"
                                android:includeFontPadding="false"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:background="@color/newLightGray"
                                android:layout_toEndOf="@+id/orTv"
                                android:layout_toRightOf="@+id/orTv"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/walletView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/d_round_blue_border"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/boost_with_wallet"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                android:textColor="@color/blue"/>

                            <TextView
                                android:id="@+id/boostDescTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/_1_boost_with_"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold"
                                android:textColor="@color/blue"/>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/seperaterView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:background="@color/newLightGray"
                                android:layout_toStartOf="@+id/orTv1"
                                android:layout_toLeftOf="@+id/orTv1"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/orTv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text="@string/or"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/newLightGray"
                                android:includeFontPadding="false"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:background="@color/newLightGray"
                                android:layout_toEndOf="@+id/orTv1"
                                android:layout_toRightOf="@+id/orTv1"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/goldView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/d_round_blue_border"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_25sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/get_binder_gold"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                android:textColor="@color/blue"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/_1_free_boost_every_month"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold"
                                android:textColor="@color/blue"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>